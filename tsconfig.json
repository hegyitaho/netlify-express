{
  "compilerOptions": {
     "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./out",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "^src/(.*)$": ["./src/*"],
      "^test/(.*)$": ["./test/*"],
      "^test-resources/(.*)$": ["./test-resources/*"],
   },
   "esModuleInterop": true
  },
  "include": ["src"]
}
